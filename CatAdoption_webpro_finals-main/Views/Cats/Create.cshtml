@model CatAdoption.Models.Cat

@{
    ViewData["Title"] = "Add New Cat";
}

<h1 class="form-title">@ViewData["Title"]</h1>

<form asp-action="Create" method="post" class="cat-form">
    <div class="form-group">
        <label asp-for="Name" class="form-label">Cat Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter the cat's name" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Breed" class="form-label">Breed</label>
        <input asp-for="Breed" class="form-control" placeholder="Enter the cat's breed" required />
        <span asp-validation-for="Breed" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Age" class="form-label">Age</label>
        <input asp-for="Age" class="form-control" placeholder="Enter the cat's age in years" type="number" min="0" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" placeholder="Enter a short description of the cat"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl" class="form-label">Image URL</label>
        <input asp-for="ImageUrl" class="form-control" placeholder="Enter the image URL" type="url" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group checkbox-group">
        <label asp-for="AvailableForAdoption" class="form-label">Available for Adoption</label>
        <input type="hidden" name="AvailableForAdoption" value="false" />
        <input asp-for="AvailableForAdoption" type="checkbox" />
        <span asp-validation-for="AvailableForAdoption" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Cat</button>
    <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-secondary">Back to Cat List</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<!-- Add custom CSS for styling -->
