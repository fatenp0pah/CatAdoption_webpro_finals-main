@model IEnumerable<CatAdoption.Models.Cat>

@{
    ViewData["Title"] = "Home";
}

<h1>Welcome to Cat Adoption</h1>
<p>Find your new furry friend!</p>

<style>
    /* General Styling */
    body {
        background-color: #f8e0e0;
        font-family: 'Poppins', sans-serif;
        color: #333;
        margin: 0;
        padding: 20px;
    }

    h1 {
        font-size: 2.5rem;
        color: #e85c84;
        text-align: center;
        margin-bottom: 15px;
        font-weight: bold;
    }

    p {
        font-size: 1.2rem;
        text-align: center;
        margin-bottom: 30px;
        color: #555;
    }

    /* Table Styling */
    .table {
        width: 100%;
        margin: 0 auto;
        border-collapse: collapse;
        border-spacing: 0;
        background-color: #ffffff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    }

    .table thead {
        background-color: #95a77c;
    }

    .table th {
        color: white;
        font-weight: bold;
        text-align: center;
        padding: 12px 16px;
        text-transform: uppercase;
        font-size: 0.9rem;
    }

    .table td {
        padding: 14px 16px;
        font-size: 0.95rem;
        text-align: center;
        vertical-align: middle;
        color: #555;
        border-bottom: 1px solid #f0f0f0;
    }

    .table tbody tr:hover {
        background-color: #ffe6eb;
        transition: all 0.3s ease-in-out;
    }

    /* Badge Styling */
    .badge {
        display: inline-block;
        padding: 0.5em 0.75em;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        border-radius: 10px;
    }

    .bg-success {
        background-color: #79e85c;
        color: white;
    }

    .bg-secondary {
        background-color: #95a77c;
        color: white;
    }

    /* Image Styling */
    .img-fluid {
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>

<!-- Display TempData messages -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" style="margin: 15px auto; max-width: 800px;">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" style="margin: 15px auto; max-width: 800px;">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Breed</th>
            <th>Age</th>
            <th>Image</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.Name</td>
                <td>@cat.Breed</td>
                <td>@cat.Age</td>
                <td>
                    @if (!string.IsNullOrEmpty(cat.ImageUrl))
                    {
                        <img src="@cat.ImageUrl" alt="@cat.Name" class="img-fluid" style="max-width: 100px; height: auto;" />
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/100" alt="No image available" class="img-fluid" style="max-width: 100px; height: auto;" />
                    }
                </td>
                <td>
                    <span class="badge @(cat.AvailableForAdoption ? "bg-success" : "bg-secondary")">
                        @(cat.AvailableForAdoption ? "Available" : "Adopted")
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>
