<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Cat Adoption</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap" rel="stylesheet"> <!-- Font Import -->
    <link href="~/css/styles.css" rel="stylesheet">

    <style>
      /* Body */
body {
    font-family: 'Poppins', sans-serif; 
    background-color: #fff8f0;
    color: #333;
    margin: 0; /* Remove default margin */
    padding: 0; 
}

/* Remove padding from the body if it's causing extra space */
.container-fluid {
    padding-left: 0;
    padding-right: 0;
}
.navbar {
    background-color: #95a77c; /* Pink background */
    position: fixed;
    top: 0;
    left: 0; /* Ensure navbar starts from the left */
    width: 100%; /* Full width */
    padding: 15px 30px;
    z-index: 1000;
    box-shadow: none;
    box-sizing: border-box; /* Include padding in width calculation */
}

        .navbar .navbar-nav {
            justify-content: center; /* Center navbar items */
            width: 100%;
        }

        .navbar-nav .nav-item {
            margin: 0 20px; /* More space between items */
        }

        /* Navbar Links (Buttons) */
        .navbar-nav .nav-link {
            color: #fff; /* White text for better contrast */
            font-weight: 500;
            font-size: 1.1rem;
            text-transform: uppercase;
            padding: 10px 15px;
            border-radius: 25px;
            transition: all 0.3s ease;
            text-decoration: none; /* Remove underline */
            letter-spacing: 1px; /* Add letter spacing for a modern look */
        }

        /* Navbar Link Hover Effect */
        .navbar-nav .nav-link:hover {
            background-color: #f1a5b3; /* Darker pink background */
            color: white; /* Text color stays white */
            transform: translateY(-2px); /* Slight lifting effect */
        }

        .navbar-brand {
            color: #fff; /* White brand text */
            font-size: 1.5rem;
            font-weight: bold;
            text-transform: uppercase;
            margin-right: 50px; /* Adjust space on the right */
            transition: color 0.3s ease;
        }

        .navbar-brand:hover {
            color: #ff4d6d; /* Change brand color on hover */
        }

        /* Main content area */
        .content {
            padding: 0px 0px 0px; /* Added padding to avoid content being hidden under fixed navbar */
        }

        /* Footer */
        footer {
            background-color: #ff6b81;
            color: white;
            text-align: center;
            padding: 1rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <!-- Conditionally Render Navbar Based on Role -->
        @if (ViewData["HideNavbar"] is bool hideNavbar && hideNavbar)
        {
            // Do nothing, navbar is hidden
        }
        else
        {
            @if (User.IsInRole("Admin"))
            {
                <!-- Admin Navbar -->
                <nav class="navbar navbar-expand-lg navbar-light">
                    <a class="navbar-brand" href="/Admin/Dashboard">Admin Dashboard</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item active">
                                <a class="nav-link" href="/Admin/Dashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Users/Logout">Logout</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            }
            else
            {
                <!-- User Navbar -->
                <nav class="navbar navbar-expand-lg navbar-light">
                    <a class="navbar-brand" href="/Home/Index">Cat Adoption</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item active">
                                <a class="nav-link" href="/Home/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Users/Logout">Logout</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            }
        }

        <!-- Main content -->
        <div class="content">
            @RenderBody()
        </div>
    </div>


    @RenderSection("Scripts", required: false)
</body>
</html>
